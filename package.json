{
	"name": "auto_mart",
	"version": "1.0.0",
	"description": "This project is based of the Andela coding Bootcamp Challenge",
	"main": "index.js",
	"scripts": {
		"start": "node ./build/server.js",
		"test": "cross-env NODE_ENV=test && mocha --require @babel/register --recursive --exit || true",
		"generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
		"coveralls-coverage": "coveralls < lcov.info",
		"codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
		"coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
		"build": "babel src --out-dir ./build --copy-files",
		"deploy": "gh-pages -d UI",
		"dev": "nodemon --exec babel-node ./src/server.js",
		"debug": "node --inspect-brk ./dist/server.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Oliver-ke/Auto_Mart.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Oliver-ke/Auto_Mart/issues"
	},
	"homepage": "https://github.com/Oliver-ke/Auto_Mart#readme",
	"dependencies": {
		"@sendgrid/mail": "^6.4.0",
		"bcryptjs": "^2.4.3",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"cloudinary": "^1.14.0",
		"cors": "^2.8.5",
		"dotenv": "^8.0.0",
		"express": "^4.16.4",
		"express-fileupload": "^1.1.9",
		"gh-pages": "^2.0.1",
		"jsonwebtoken": "^8.5.1",
		"pg": "^7.11.0",
		"validator": "^10.11.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.4",
		"@babel/core": "^7.4.5",
		"@babel/node": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@babel/register": "^7.4.4",
		"codeclimate-test-reporter": "^0.5.1",
		"coveralls": "^3.0.3",
		"cross-env": "^5.2.0",
		"eslint": "^5.16.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-plugin-import": "^2.17.2",
		"mocha": "^6.1.4",
		"mocha-lcov-reporter": "^1.3.0",
		"nodemon": "^1.19.1",
		"nyc": "^14.1.1"
	}
}
